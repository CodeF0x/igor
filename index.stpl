<!DOCTYPE html>
<html lang="en">
  <% include!("partials/head.stpl"); %>
  <body>
    <header>
      <section>
        <div class="header__column">
          <p class="header-column__label">Updated</p>
          <p><%= data.meta.last_edited_date.as_ref().unwrap() %></p>
        </div>
        <div class="header__column">
            <img src="assets/img/exclamation-mark.svg">
        </div>
        <div class="header__column">
          <p class="header-column__label">Design</p>
          <p>
            <a href="https://electerious.com/"> Tobias Reich </a>
          </p>
        </div>
      </section>
    </header>
    <section class="main">
      <div class="main__headlines">
        <h1 class="main-headlines__big"><%= data.index.headline %></h1>
        <h4 class="main-headlines__small"><%= data.index.sub_headline %></h4>
      </div>
      <div class="main__text">
        <p class="main-text__line">
          <%= data.index.first_line %>
        </p>
        <div class="main-text__line">
          <%= data.index.second_line %>
        </div>
      </div>
    </section>
  </body>
</html>